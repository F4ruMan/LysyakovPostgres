<Window x:Class="WpfApp3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center">
            <Label Name="lbloguser" Content="Label" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Menu Height="27"/>
            <DataGrid Name="dgUsers" Margin="0,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Grid>
                <Button Name="btnEdit" Content="Изменить данные" Height="30" Width="305" Margin="10,45,485,38"/>
                <Button Name="btnChangepass"  Content="Смениьт пароль" Height="30" Width="150" Margin="165,10,485,73" Click="btnChangepass_Click"/>
                <Button Name="btnDelete" Content="Уволить сотрудника" Height="30" Width="150" Margin="10,10,640,73" Click="btnDelete_Click"/>
            </Grid>
        </StackPanel>
        
    </Grid>
</Window>
